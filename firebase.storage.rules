rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Allow access only to authenticated users for backgrounds
    match /backgrounds/{backgroundFile} {
      allow write: if request.auth != null;
      allow read: if true; // Anyone can read the backgrounds
    }
    
    // Allow authenticated users to write to their own processed images folder
    match /processedImages/{userId}/{folderId}/{imageFile} {
      allow write: if request.auth != null && request.auth.uid == userId;
      allow read: if request.auth != null && request.auth.uid == userId;
    }
    
    // Default rule for other storage areas, only allow read access
    match /{allPaths=**} {
      allow read: if true;  // Allow read access to everyone
    }
  }
}